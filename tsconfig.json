{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "esModuleInterop": true,
      "declaration": false,
      "module": "es2020",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "target": "ES2022",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2018",
        "dom"
      ],
      "paths": {
        "picker": [
          "dist/picker"
        ],
        "picker/*": [
          "dist/picker/*"
        ]
      },
      "useDefineForClassFields": false
    }
}
